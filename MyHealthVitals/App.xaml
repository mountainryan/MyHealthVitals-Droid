<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyHealthVitals.App">
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="colorBlackBg">#33302E</Color>
			<Color x:Key="colorWhite">#FFFFFF</Color>
			<Color x:Key="colorThemeText">#FFFFFF</Color>
			<Color x:Key="colorBlue">#0000FF</Color>

			<Style x:Key="styleLblReading" TargetType="Label">
            	<Setter Property="TextColor" Value="{DynamicResource colorThemeText}" />
        	</Style>

			<Style x:Key="styleLblNumeric" TargetType="Label">
            	<Setter Property="TextColor" Value="{DynamicResource colorBlue}" />
        	</Style>
			
        </ResourceDictionary>
		
	</Application.Resources>
</Application>
